{
    "name": "coolpay/coolpay-php-client",
    "type": "library",
    "description": "PHP-SDK to communicate with the payment provider CoolPay",
    "homepage": "https://github.com/CoolPay/coolpay-php-client",
    "license": "MIT",
    "require": {
        "php": ">=5.3.3",
        "ext-curl": "*"
    },
    "autoload": {
        "psr-4": {
            "CoolPay\\": "CoolPay/"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "CoolPay\\Tests\\": "Tests/api/"
        }
    },
    "require-dev" : {
      "phpunit/phpunit": "4.8.*",
      "squizlabs/php_codesniffer": "2.8.*",
      "satooshi/php-coveralls": "1.0.*"
    }
}
